{
  "name": "mono-f7",
  "private": true,
  "scripts": {
    "build": "dotenv -- turbo run build",
    "dev": "dotenv -- turbo run dev",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "format:unsafe": "turbo run format:unsafe",
    "check-types": "turbo run check-types",
    "clean": "turbo run clean",
    "db:push": "turbo run db:push",
    "db:migrate": "turbo run db:migrate",
    "db:generate": "turbo run db:generate",
    "db:studio": "turbo run db:studio",
    "docker:build": "turbo run docker:build",
    "docker:build:server": "docker build -t mono-f7-server -f apps/server/Dockerfile .",
    "docker:build:store": "docker build -t mono-f7-store -f apps/store/Dockerfile .",
    "docker:build:admin": "docker build -t mono-f7-admin -f apps/admin/Dockerfile .",
    "docker:run:server": "docker run -p 3005:3005 mono-f7-server",
    "docker:run:store": "docker run -p 3000:3000 mono-f7-store",
    "docker:run:admin": "docker run -p 3001:3001 mono-f7-admin"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "husky": "^9.1.7",
    "lefthook": "^1.12.2",
    "lint-staged": "^16.1.4",
    "turbo": "^2.5.5",
    "typescript": "catalog:",
    "ultracite": "5.1.2",
    "dotenv-cli": "catalog:"
  },
  "engines": {
    "node": ">=22"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "typescript": "^5.9.2",
      "@types/bun": "latest",
      "react": "^19.1.0",
      "react-dom": "^19.1.0",
      "@types/react": "19.1.0",
      "@types/react-dom": "19.1.1",
      "zod": "^4.0.15",
      "tailwindcss": "^4.1.11",
      "lucide-react": "^0.475.0",
      "next-themes": "^0.4.6",
      "drizzle-orm": "^0.44.4",
      "drizzle-kit": "^0.31.4",
      "drizzle-zod": "^0.8.3",
      "pg": "^8.16.3",
      "@types/pg": "^8.15.5",
      "dotenv-cli": "^10.0.0",
      "better-auth": "^1.3.4",
      "@better-auth/cli": "^1.3.4",
      "@trpc/client": "^11.4.4",
      "@trpc/server": "^11.4.4",
      "@trpc/tanstack-react-query": "^11.4.4",
      "vite": "^7.1.1 ",
      "superjson": "^2.2.2",
      "url-join": "^5.0.0",
      "@tanstack/react-query": "^5.85.0",
      "@tanstack/react-query-devtools": "^5.85.0",
      "@tanstack/react-router": "^1.131.2",
      "@tanstack/react-router-devtools": "^1.131.2",
      "@tanstack/react-router-with-query": "^1.130.17",
      "@tanstack/react-start": "^1.131.2"
    }
  },
  "packageManager": "bun@1.2.20",
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "bunx ultracite format"
    ]
  }
}
