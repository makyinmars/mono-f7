{
  "name": "@repo/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    "./client": {
      "types": "./src/client/index.ts",
      "default": "./src/client/index.ts"
    },
    "./server": {
      "types": "./src/server/index.ts",
      "default": "./src/server/index.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf node_modules dist .turbo .cache",
    "dev": "tsc",
    "format": "ultracite format",
    "format:unsafe": "ultracite format --unsafe",
    "lint": "ultracite lint",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "@repo/auth": "workspace:*",
    "@repo/db": "workspace:*",
    "@trpc/client": "catalog:",
    "@trpc/server": "catalog:",
    "superjson": "catalog:",
    "url-join": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "typescript": "catalog:",
    "vite": "catalog:"
  }
}
